        <div class="container-fluid col-md-5" > 
            <div class="container-flat-form"  >
                <div class="title-flat-form title-flat-blue" >Registrar una nueva Materia</div>
                <form autocomplete="off" action="/crearM" method="POST">
                    <div class="row">
                       <div class="col-xs-5 col-sm-7 col-sm-offset-2 " style="right: 10px">
                            <div class="group-material">
                                    <input type="text" name="nombre" class="material-control tooltips-general" placeholder="Escribe Nombre de Materia" pattern="[ZA-ZáéíóúÁÉÍÓÚñÑ ]{1,35}" required maxlength="35" data-toggle="tooltip" data-placement="top" title="Sola mente Texto">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Nombre</label>
                            </div>
                            <div class="group-material">
                                <input type="text" name="sigla" class="material-control tooltips-general" placeholder="Escriba Sigla de la Materia" pattern="[ZA-ZáéíóúÁÉÍÓÚñÑ-0-9-]{1,10}" required maxlength="8" data-toggle="tooltip" data-placement="top" title="Solamente Numeros y Guiones">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Sigla</label>
                            </div>
                            <div class="group-material">
                                <input type="number" name="grupo" class="material-control tooltips-general" placeholder="Escriba el grupo de la materia" pattern="[1-4 ]{1,50}" max="4" min="1" required maxlength="1" data-toggle="tooltip" data-placement="top" title="Solamente Numeros">
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Grupo</label>
                            </div>
                            
                            <p class="text-center">
                                <button type="reset" class="btn btn-info" style="margin-right: 20px;"><i class="zmdi zmdi-roller"></i> &nbsp;&nbsp; Limpiar</button>
                                <button type="submit" class="btn btn-primary"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Registrar</button>
                            </p> 
                        </div>
                    </div>
                </form>
