<!-- lsistado de las materias de la gestion actual con opciones de eliminar y editar -->
<% include ../parcial/_head %>
<% include ../parcial/_menus %>
<script type="text/javascript">
    const myHeaders=new Headers();
            myHeaders.append('token',` ${localStorage.token}`)
            myHeaders.append('rol',` ${localStorage.rol}`)
            myHeaders.append('_id',` ${localStorage.id}`)
            // console.log(localStorage.token)
            if(localStorage.rol=='administrador'){
            
                fetch('/token',{
                    headers:myHeaders
                })
                fetch('/tokeng',{
                    headers:myHeaders
                })
                fetch('/tokenm',{
                    headers:myHeaders
                })
            }else{window.location.replace('/login')}
</script>
<div class="container">
    <div class="page-header">
      <h1 class="all-tittles">Sistema de Guias de Laboratorio <small>Administración Usuarios</small></h1>
    </div>
</div>

<div class="container-fluid"  style="margin: 5px 0;">
    <div class="row">
      
        <div class="col-xs-12 col-sm-12 col-md-8 text-justify lead">
            Bienvenido a la seccion de materias programadas en la gestion
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 lead">
            <ol class="breadcrumb">
                    <li><a href="indexM">Nueva materia</a></li>
                    <li class="active">Listado de materias</li>
            </ol>
        </div>
    </div>
</div>
<div class="container-fluid">
        <div class="container-flat-form">
            <div class="title-flat-form title-flat-blue" style="margin: 5px 0;">MATERIAS DE LA GESTION</div>
            <form autocomplete="off">
                    <div class="container-fluid">
                            
                            <!-- <h2 class="text-center all-tittles" style="clear: both; margin: 10px 0;">Listado de Materias</h2> -->
                            <div class="table-responsive">
                                <div class="div-table" style="margin:0 !important;">
                                    <div class="div-table-row div-table-row-list" style="background-color:#DFF0D8; font-weight:bold;">
                                        <div class="div-table-cell" style="width: 6%;">Nº</div>
                                        <div class="div-table-cell" style="width: 15%;">Nombre</div>
                                        <div class="div-table-cell" style="width: 15%;">Sigla</div>
                                        <div class="div-table-cell" style="width: 15%;">Grupo</div>
                                        <div class="div-table-cell" style="width: 9%;">Operacion</div>
                                    </div>
                                </div>
                                <%for(var i=0;i< resp.materia.length;i++ ){%>
                                <div class="table-responsive">
                                    <div class="div-table" style="margin:0 !important;">
                                        <div class="div-table-row div-table-row-list">
                                            <div class="div-table-cell" style="width: 6%;"><%=i+1%></div>
                                            <div class="div-table-cell" style="width: 15%;"><%=resp.materia[i].nombre%></div>
                                            <div class="div-table-cell" style="width: 15%;"><%=resp.materia[i].sigla%></div>
                                            <div class="div-table-cell" style="width: 15%;"><%=resp.materia[i].grupo%></div>
                                            <div class="div-table-cell" style="width: 9%;">
                                                <a href="/editar/<%= resp.materia[i]._id %>" class="zmdi zmdi-refresh btn btn-info"></a>
                                                <a href="/delMa/<%= resp.materia[i]._id %>" class="zmdi zmdi-delete  btn btn-danger"></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <%}%>   
                        </div>
            </form>
        </div>
    </div>
<div class="modal fade" tabindex="-1" role="dialog" id="ModalHelp">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title text-center all-tittles">ayuda del sistema</h4>
        </div>
        <div class="modal-body">
